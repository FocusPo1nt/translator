<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="0dp"
        android:layout_height="56dp"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:contentInsetLeft="0dp"
        app:contentInsetStart="0dp"
        >
        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <TextView
                android:id="@+id/from_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textEnd"
                android:gravity="end|center"
                android:layout_weight="1"/>

            <ImageView
                android:id="@+id/reverse_image_view"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_margin="5dp"
                android:src="@drawable/change"/>

            <TextView
                android:id="@+id/to_language"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="textStart"
                android:gravity="start|center"
                android:layout_weight="1"/>

        </LinearLayout>
        </android.support.v7.widget.Toolbar>


    <EditText
        android:id="@+id/input_edit_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:hint="Type text"
        app:layout_constraintDimensionRatio="3 : 1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar"
        android:layout_marginTop="-2dp"
        app:layout_constraintHorizontal_bias="1.0"
        android:background="#00000000"/>

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_edit_text"
        app:layout_constraintRight_toLeftOf="@+id/text_right_line"
        app:layout_constraintBottom_toBottomOf="parent"
        >

        <TextView
            android:id="@+id/output_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Hello Fragment"
            android:autoLink="web"
            android:textIsSelectable="true" />


    </ScrollView>


    <FrameLayout
        android:id="@+id/clear_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="@+id/text_left_line"
        app:layout_constraintBottom_toBottomOf="@+id/input_edit_text"
        app:layout_constraintDimensionRatio="1 : 1"
      />


    <ImageView
        android:id="@+id/clear_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/clear"
        app:layout_constraintLeft_toLeftOf="@+id/clear_left_line"
        app:layout_constraintRight_toRightOf="@+id/clear_right_line"
        app:layout_constraintTop_toTopOf="@+id/clear_frame"
        app:layout_constraintBottom_toBottomOf="@+id/clear_frame"/>



    <FrameLayout
        android:id="@+id/favorite_frame"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintDimensionRatio="1 : 1"
        app:layout_constraintLeft_toLeftOf="@+id/text_right_line"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_edit_text"
        />


    <ImageView
        android:id="@+id/star_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:src="@drawable/star_p"
        app:layout_constraintLeft_toLeftOf="@+id/star_left_line"
        app:layout_constraintRight_toRightOf="@+id/star_right_line"
        app:layout_constraintTop_toTopOf="@+id/favorite_frame"
        app:layout_constraintBottom_toBottomOf="@+id/favorite_frame"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/connection_error_view"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/input_edit_text"
        app:layout_constraintRight_toLeftOf="@+id/text_right_line"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="@string/connection_error"/>



    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_left_line"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.10" />


    <android.support.constraint.Guideline
        android:id="@+id/clear_right_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.075" />


    <android.support.constraint.Guideline
        android:id="@+id/clear_left_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.02" />





    <android.support.constraint.Guideline
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text_right_line"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.85" />


    <android.support.constraint.Guideline
        android:id="@+id/star_right_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />


    <android.support.constraint.Guideline
        android:id="@+id/star_left_line"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.895" />



</android.support.constraint.ConstraintLayout>